# ============================================
# CineZone - Environment Variables
# ============================================

# Database
DB_NAME=cinezone_db
DB_USER=postgres
DB_PASSWORD=change_me_in_production
DB_PORT=5432

# JWT Secrets (CHANGE IN PRODUCTION!)
JWT_SECRET=your_super_secret_jwt_key_change_me
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_me
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt
BCRYPT_SALT_ROUNDS=10

# TMDB API
TMDB_API_KEY=your_tmdb_api_key_here

# Seed TMDB data on container start (true/false)
SEED_TMDB_ON_START=true

# Frontend API URL
NUXT_PUBLIC_API_BASE=http://localhost:3001/api

# Production (uncomment and adjust for production)
# NUXT_PUBLIC_API_BASE=https://cinezone.jeremyduc.dev/api
# SEED_TMDB_ON_START=false  # Désactiver en prod si déjà fait
